modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "TerraFusionPro Web Client"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "API Gateway"

[[workflows.workflow]]
name = "TerraFusionPro Web Client"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd packages/web-client && node index.js"
waitForPort = 5000

[[workflows.workflow]]
name = "API Gateway"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node packages/api/index.js"
waitForPort = 5002

[deployment]
run = ["sh", "-c", "cd packages/web-client && node index.js"]

[[ports]]
localPort = 5000
externalPort = 80
