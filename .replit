modules = ["nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "TerraFusionPro Web Client"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "API Gateway"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Property Service"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "User Service"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Report Service"

[[workflows.workflow]]
name = "TerraFusionPro Web Client"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node packages/web-client/index.js"
waitForPort = 5000

[[workflows.workflow]]
name = "API Gateway"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node packages/api/index.js"
waitForPort = 5002

[[workflows.workflow]]
name = "Property Service"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node services/property-service/index.js"
waitForPort = 5003

[[workflows.workflow]]
name = "User Service"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node services/user-service/index.js"
waitForPort = 5004

[[workflows.workflow]]
name = "Report Service"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node services/report-service/index.js"
waitForPort = 5007

[deployment]
run = ["sh", "-c", "node packages/web-client/index.js"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5002
externalPort = 3000

[[ports]]
localPort = 5003
externalPort = 3001

[[ports]]
localPort = 5004
externalPort = 3002

[[ports]]
localPort = 5007
externalPort = 3003
